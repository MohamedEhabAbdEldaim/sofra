<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.homeActivity.homeActivity">

        <RelativeLayout
            android:id="@+id/home_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d60"
            android:background="@color/greydark2">

            <ImageView
                android:id="@+id/home_img_back"
                android:layout_width="@dimen/d100"
                android:layout_height="@dimen/d60"
                android:layout_marginStart="@dimen/d8"
                android:src="@drawable/basket" />

            <TextView
                android:id="@+id/home_app_bar_text_view_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/d8"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/colorRed"
                android:textSize="@dimen/txt_20sp" />

            <ImageView
                android:id="@+id/home_img_notification"
                android:layout_width="@dimen/d100"
                android:layout_height="@dimen/d60"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/d8"
                android:src="@drawable/notification" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/home_activity_fl_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/home_lnly_menu"
            android:layout_below="@+id/home_toolbar" />

        <LinearLayout
            android:id="@+id/home_lnly_menu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d60"
            android:layout_alignParentBottom="true"
            android:background="@color/colorRed"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_img_menu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/d8"
                android:layout_marginTop="@dimen/d8"
                android:layout_marginBottom="@dimen/d8"
                android:layout_weight="1"
                android:padding="@dimen/d4"
                android:src="@drawable/more_pic" />

            <ImageView
                android:id="@+id/home_img_edit_profile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/d8"
                android:layout_marginTop="@dimen/d8"
                android:layout_marginBottom="@dimen/d8"
                android:layout_weight="1"
                android:padding="@dimen/d4"
                android:src="@drawable/edit_profile_pic" />

            <ImageView
                android:id="@+id/home_img_ordered"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/d8"
                android:layout_marginTop="@dimen/d8"
                android:layout_marginBottom="@dimen/d8"
                android:layout_weight="1"
                android:padding="@dimen/d4"
                android:src="@drawable/orderd" />

            <ImageView
                android:id="@+id/home_img_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/d8"
                android:layout_marginTop="@dimen/d8"
                android:layout_marginEnd="@dimen/d8"
                android:layout_marginBottom="@dimen/d8"
                android:layout_weight="1"
                android:padding="@dimen/d4"
                android:src="@drawable/home_pic" />
        </LinearLayout>

    </RelativeLayout>
</layout>